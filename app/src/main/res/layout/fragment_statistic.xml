<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="de.dabbeljubee.blutdruckstatistik.MainActivity$PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics_fragment_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
            android:id="@+id/statistic_spinner_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/statistics_spinner_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_label"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"/>
    <Spinner
            android:id="@+id/statistic_spinner"
            android:layout_toEndOf="@+id/statistic_spinner_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:labelFor="@+id/statistic_spinner_label"
            android:layout_above="@+id/statistic_header" android:layout_below="@+id/section_label"/>

    <TableRow
            android:id="@+id/statistic_header"
            android:layout_below="@+id/statistic_spinner_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
        <TextView
                android:id="@+id/statistic_header_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/statistics_header_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textAlignment="textStart"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.175"
                android:layout_alignParentEnd="true">
            <TextView
                    android:id="@+id/statistic_header_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
            <TextView
                    android:id="@+id/statistic_header_level_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.175"
                android:layout_alignParentEnd="true">
            <TextView
                    android:id="@+id/statistic_header_type_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
            <TextView
                    android:id="@+id/statistic_header_level_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.175"
                android:layout_alignParentEnd="true">
            <TextView
                    android:id="@+id/statistic_header_type_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
            <TextView
                    android:id="@+id/statistic_header_level_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.175"
                android:layout_alignParentEnd="true">
            <TextView
                    android:id="@+id/statistic_header_type_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
            <TextView
                    android:id="@+id/statistic_header_level_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"/>
        </LinearLayout>
    </TableRow>

    <ExpandableListView
            android:id="@+id/statistic_data"
            android:layout_width="match_parent"
            android:layout_below="@+id/statistic_header"
            android:layout_alignParentStart="true"
            android:headerDividersEnabled="true"
            android:layout_marginTop="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"/>

</RelativeLayout>
